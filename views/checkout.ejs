<!DOCTYPE html>
<html>
<head>
    <title>CustomThreads - Checkout</title>
    <link rel="stylesheet" type="text/css" href="/css/checkout.css">
    <link rel="stylesheet" type="text/css" href="/css/project.css">

</head>
<body>


<div class="header">
    <div class="logo-container">
        <img src="/images/logo.png" alt="Random Logo" class="logo">
        <h1 class="brand">Welcome, <%= name %></h1>
    </div>
    <div class="menu">
        <div>
            <button class="" id="services-btn">Services</button>
            <button id="contact-btn">Contact</button>
            <button id="home-btn">Home</button>
        </div>
    </div>
</div>

<h1>Selected Services for <%= name %>:</h1>
<ul id="services-list"></ul>

<table>
    <tr>
        <th>Service</th>
        <th>Quantity</th>
        <th>Cost</th>
        <th>Update quantity</th>
        <th>Delete order</th>
    </tr>
    <% services.forEach(function(service) { %>
        <tr>
            <td><%= service.service %></td>
            <td><%= service.quantity %></td>
            <td><%= service.quantity * service.price %></td>
            <td>
                <form action="/updateService" method="POST">
                    <input type="hidden" name="serviceId" value="<%= service.service_id %>">
                    <input type="number" name="quantity" value="<%= service.quantity %>">
                    <button type="submit">Update</button>
                </form>
            </td>
            <td>
                <form action="/removeService" method="POST">
                    <input type="hidden" name="serviceId" value="<%= service.service_id %>">
                    <button type="submit">Remove</button>
                </form>
            </td>
        </tr>
    <% }); %>
</table>

<h3>Total Price: $<%= totalCost %></h3>

<form action="/thankyou" method="GET">
    <label for="appointment">Appointment Date:</label>
    <input type="date" name="appointment" id="appointment" required><br><br>

    <h3>Enter Card Details:</h3>
    <div class="card-logos">
        <img src="https://www.aexp-static.com/cdaas/one/statics/axp-static-assets/1.8.0/package/dist/img/logos/dls-logo-bluebox-solid.svg" alt="American Express">
        <img src="https://logos-world.net/wp-content/uploads/2020/09/Mastercard-Logo.png" alt="Mastercard">
        <img src="https://www.visa.com.au/dam/VCOM/regional/ve/romania/blogs/hero-image/visa-logo-800x450.jpg" alt="Visa">
    </div>
    <label for="card-no">Card Number:</label>
    <input type="text" id="card-no" name="card-no" pattern="[0-9]{1,16}" required><br>

    <label for="cardholder-name">Cardholder Name:</label>
    <input type="text" id="cardholder-name" name="cardholder-name" required><br>

    <label for="cvv">CVV:</label>
    <input type="text" id="cvv" name="cvv" pattern="[0-9]{1,3}" required><br>

    <label for="expiry">Expiry Date:</label>
    <input type="date" id="expiry" name="expiry" required><br>

    <input type="submit" value="Pay $<%= totalCost %> Now" >
</form>
<footer class="footer">
    <div class="footer-content">
        <img src="/images/logo.png" alt="Footer Logo" class="footer-logo">
        <div class="contact-details">
            <p>Contact: +1234567890</p>
            <p>Email: info@customthreads.com</p>
        </div>
    </div>
    <div class="address">
        <h3>Address:</h3>
        <p>123 Al Nahda empire building, Street 17A, Dubai, UAE</p>
    </div>
    <div></div>
</footer>

</body>
<script src="/js/checkout.js"></script>
</html>